    .login-form .dropdown-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .login-form .dropdown-content button {
            margin: 0;
        }

        .login-form .dropdown-content span {
            margin: 0 10px;
        }

    @@keyframes slide {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .open {
        animation: slide 1s;
        display: block;
    }
