@model HulubejeBooking.Models.HistoryWrapper
@using HulubejeBooking.Models.BusModels;
<partial name="_Navigation" />
<head>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.1/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <title>History</title>
    <style>
        .wide-tab {
            max-width: 300px;
        }
        .customcard{
            height: 160px;
        }

        .companyimage {
            height: 150px;
            width: 100%;
        }

        .card {
            transition: box-shadow 0.3s;
        }

            .card:hover {
                box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            }

        @@media (max-width: 992px) {
            .companyimage {
                height: 100px;
            }
        }

        @@media (max-width: 500px) {
            .companyimage {
                height: 80px;
            }

            .customcard {
                height: 185px;
            }
        }
    </style>
</head>
<div class="container vh-50 mt-3 mb-3">
    <ul class="nav nav-tabs" id="myTabs">
        <li class="nav-item">
            <a class="nav-link active wide-tab" id="tab1-tab" data-toggle="tab" href="#tab1">Cinema and Hotel History</a>
        </li>
        <li class="nav-item">
            <a class="nav-link wide-tab" id="tab2-tab" data-toggle="tab" href="#tab2">Transportaion History</a>
        </li>
    </ul>
    <div class="tab-content mt-4 ">
        <div class="tab-pane fade show active" id="tab1">
            @if (Model != null && Model?.OrdersModel?.Orders != null && Model.OrdersModel.Orders.Any())
            {
                <div class="customContainer">
                    @foreach (var order in Model.OrdersModel.Orders)
                    {
                        string formattedDate = "";
                        var date = @order?.IssuedDate?.ToString();
                        DateTime inputDate = DateTime.MinValue;
                        if (date != null)
                        {
                            inputDate = DateTime.ParseExact(date, "M/d/yyyy h:mm:ss tt", null);
                        }
                        formattedDate = inputDate.ToString("MMMM dd, yyyy HH:mm:ss");
                        <div class="card p-2 customcard mb-3">
                            <div class="row">
                                <div class="col-4">
                                    <img src="@order?.OrgPreviewImage" class="img-fluid companyimage" alt="Supplier Logo" />
                                </div>
                                <div class="col-8">
                                    <div>
                                        <p style="margin: 2px; ">@order?.SupplierBrandName</p>
                                        <small style="color: blue">@order?.BranchName</small>
                                        <p style="margin: 2px; "> @order?.VoucherCode</p>
                                        <p style="margin: 2px; "> @formattedDate</p>
                                        <p style="margin: 2px; ">@order?.GrandTotal Birr</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="message-container" style=" display: flex; align-items: center; justify-content: center; height: 50vh;">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-circle mr-2" style="font-size: 60px; color: red;"></i>
                        <p class="mt-2">We apologize, but it seems there is no available history. </p>
                    </div>
                </div>
            }
        </div>
        <div class="tab-pane fade" id="tab2">
            @if (Model?.HistoryModel?.Count() != 0)
            {
                @foreach (var route in Model?.HistoryModel?.Take(10) ?? Enumerable.Empty<HistoryModel>())
                {
                    if (route != null)
                    {
                        <div class="card mt-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-4 mb-2">
                                        <img src="@(route?.ImgUrl ?? "../Assets/bus.png")" class="img-fluid companyimage" alt="Supplier Logo" />
                                    </div>
                                    <div class="col-sm-8">
                                        <h5 class="card-title">@route?.RouteName</h5>
                                        <p class="card-text">Route Description: @route?.RouteDescription</p>
                                        <p class="card-text">Departure Date: @route?.DepartureDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
                                        <p class="card-text">Distance: @route?.Distance km</p>

                                        @if (route != null && route.Tickets != null && route.Tickets.Count > 0)
                                        {
                                            <div class="ticket-details">
                                                <table class="table table-bordered mt-3">
                                                    <thead>
                                                        <tr>
                                                            <th>Passenger</th>
                                                            <th>Subtotal</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var ticket in route.Tickets)
                                                        {
                                                            <tr>
                                                                <td>@ticket.PassengerFullName</td>
                                                                <td>@ticket.SubTotal</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="message-container" style=" display: flex; align-items: center; justify-content: center; height: 50vh;">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-exclamation-circle mr-2" style="font-size: 60px; color: red;"></i>
                                <p class="mt-2">We apologize, but it seems there is no available history.</p>
                            </div>
                        </div>
                    }
                }
            }
            else
            {
                <div class="message-container" style=" display: flex; align-items: center; justify-content: center; height: 50vh;">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-circle mr-2" style="font-size: 60px; color: red;"></i>
                        <p class="mt-2">We apologize, but it seems there is no available history.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<partial name="_Footer" />

